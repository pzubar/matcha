{

  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@db": ["src/db/"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules", "dist", "client"]
}
